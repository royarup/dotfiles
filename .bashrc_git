#Git specific aliases
alias _gitg='git log --oneline --abbrev-commit --all --graph --decorate --color'

function _gitRemoteFetch() {
   #RemoteLocation : hostname:repo
   remoteLocation=$1
   remoteBranchName='repoRemote'
   git remote add $remoteBranchName $remoteLocation
   git fetch --all

   #Creating local copy of each remote branch
   while read line; do
         echo "$line"
         git checkout "$line"
   done < <( git branch -a | grep remotes | cut -f3 -d'/' )
   git remote rm $remoteBranchName
}
